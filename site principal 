<script>
  window.ChatBoyAI = {
    sections: ['bots', 'configuracoes', 'intelligence-dashboard', 'combo-section', 'test-area', 'planos-section', 'skin-selector'],
    timerInterval: null,
    timeLeft: 30,
    activeSkin: '',
    skinPreview: null,

    showSection(id) {
      this.sections.forEach(sec => document.getElementById(sec).style.display = sec === id ? 'block' : 'none');
    },

    toggleSection(id) {
      const el = document.getElementById(id);
      this.sections.filter(s => s !== id).forEach(s => document.getElementById(s).style.display = 'none');
      el.style.display = el.style.display === 'none' ? 'block' : 'none';
    },

    openSkinCustomizer() {
      this.toggleSection('skin-selector');
    },
    openIntelligenceDashboard() {
      this.toggleSection('intelligence-dashboard');
    },
    toggleCombos() {
      this.toggleSection('combo-section');
    },
    toggleTestArea() {
      this.toggleSection('test-area');
      this.startTestTimer();
    },
    togglePlanos() {
      this.toggleSection('planos-section');
    },
    closeSkinSelector() {
      this.toggleSection('skin-selector');
    },
    selectSkin(el) {
      document.querySelectorAll(".skin-option").forEach(img => img.classList.remove("selected"));
      el.classList.add("selected");
      this.showNotification("Skin selecionada aplicada!");
    },
    subscribe(plan) {
      this.showNotification(`Voc√™ assinou o plano ${plan}!`);
    },
    subscribeCombo(combo) {
      this.showNotification(`Voc√™ comprou o pacote "${combo}"!`);
    },
    startTestTimer() {
      if (document.getElementById('test-area').style.display !== 'block') return;
      clearInterval(this.timerInterval);
      this.timeLeft = 30;
      document.getElementById("timer").innerText = `Tempo restante: ${this.timeLeft}s`;
      document.getElementById("testInput").disabled = false;
      document.getElementById("testInput").focus();

      this.timerInterval = setInterval(() => {
        this.timeLeft--;
        if (this.timeLeft <= 0) {
          clearInterval(this.timerInterval);
          document.getElementById("testInput").disabled = true;
          document.getElementById("chatBox").innerHTML += `<p><strong>Sistema:</strong> Tempo esgotado. Assine para continuar usando.</p>`;
          document.getElementById("timer").innerText = "Teste conclu√≠do.";
          document.getElementById("testInput").value = "";
        } else {
          document.getElementById("timer").innerText = `Tempo restante: ${this.timeLeft}s`;
        }
      }, 1000);
    },
    restartTest() {
      this.startTestTimer();
      document.getElementById("chatBox").innerHTML = `<p><strong>Bot:</strong> Ol√°! Como posso ajudar?</p>`;
    },
    handleMessage(e) {
      if (e.key === 'Enter') {
        const input = document.getElementById("testInput");
        const chatBox = document.getElementById("chatBox");
        const msg = input.value.trim();
        if (msg) {
          chatBox.innerHTML += `<p><strong>Voc√™:</strong> ${msg}</p>`;
          setTimeout(() => {
            chatBox.innerHTML += `<p><strong>Bot:</strong> Estou aqui para ajudar voc√™!</p>`;
          }, 500);
          input.value = "";
          chatBox.scrollTop = chatBox.scrollHeight;
        }
      }
    },
    toggleFullScreen() {
      const btn = document.getElementById("fullscreenBtn");
      if (!document.fullscreenElement) {
        document.documentElement.requestFullscreen();
        btn.innerText = "Sair da Tela Cheia";
        btn.style.display = "block";
      } else {
        if (document.exitFullscreen) document.exitFullscreen();
        btn.style.display = "none";
      }
    },
    showNotification(message) {
      const notif = document.getElementById("notification");
      notif.innerText = message;
      notif.style.display = 'block';
      setTimeout(() => {
        notif.style.display = 'none';
      }, 2000);
    }
  };

  // Attach global functions for HTML
  window.showSection = id => ChatBoyAI.showSection(id);
  window.openSkinCustomizer = () => ChatBoyAI.openSkinCustomizer();
  window.openIntelligenceDashboard = () => ChatBoyAI.openIntelligenceDashboard();
  window.toggleCombos = () => ChatBoyAI.toggleCombos();
  window.toggleTestArea = () => ChatBoyAI.toggleT