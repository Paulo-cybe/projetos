<script>
  function scrollToSection(id) {
    document.getElementById(id).scrollIntoView({ behavior: 'smooth' });
  }

  function togglePlanos() {
    const planos = document.getElementById("planos-section");
    planos.style.display = (planos.style.display === "none") ? "block" : "none";
  }

  function openSkinCustomizer() {
    document.getElementById("skin-selector").style.display = "block";
  }

  function selectSkin(el) {
    document.querySelectorAll(".skin-option").forEach(img => img.classList.remove("selected"));
    el.classList.add("selected");
    alert("Skin selecionada aplicada!");
  }

  function subscribe(plan) {
    alert(`Voc√™ assinou o plano ${plan}!`);
  }

  function subscribeCombo(combo) {
    alert(`Voc√™ comprou o pacote "${combo}"!`);
  }

  function openIntelligenceDashboard() {
    document.getElementById("intelligence-dashboard").style.display = "block";
    window.location.hash = "#intelligence-dashboard"; 
  }

  function toggleCombos() {
    document.getElementById("combo-section").style.display = "block";
    window.location.hash = "#combo-section";
  }

  let timerInterval;
  let timeLeft = 30;

  function startTestTimer() {
    clearInterval(timerInterval);
    timeLeft = 30;
    document.getElementById("timer").innerText = `Tempo restante: ${timeLeft}s`;
    document.getElementById("testInput").disabled = false;
    document.getElementById("testInput").focus();
    timerInterval = setInterval(() => {
      timeLeft--;
      if (timeLeft <= 0) {
        clearInterval(timerInterval);
        document.getElementById("testInput").disabled = true;
        document.getElementById("chatBox").innerHTML += `<p><strong>Sistema:</strong> Tempo esgotado. Assine para continuar usando.</p>`;
        document.getElementById("timer").innerText = "Teste conclu√≠do.";
        document.getElementById("testInput").value = "";
      } else {
        document.getElementById("timer").innerText = `Tempo restante: ${timeLeft}s`;
      }
    }, 1000);
  }

  function handleMessage(e) {
    if (e.key === 'Enter') {
      const input = document.getElementById("testInput");
      const chatBox = document.getElementById("chatBox");
      const msg = input.value.trim();
      if (msg !== "") {
        chatBox.innerHTML += `<p><strong>Voc√™:</strong> ${msg}</p>`;
        setTimeout(() => {
          chatBox.innerHTML += `<p><strong>Bot:</strong> Estou aqui para ajudar voc√™!</p>`;
        }, 500);
        input.value = "";
        chatBox.scrollTop = chatBox.scrollHeight;
      }
    }
  }

  function toggleTestArea() {
    document.getElementById("test-area").style.display = "block";
    startTestTimer();
  }

  function toggleFullScreen() {
    const btn = document.getElementById("fullscreenBtn");
    if (!document.fullscreenElement) {
      document.documentElement.requestFullscreen();
      btn.innerText = "Sair da Tela Cheia";
      btn.style.display = "block";
    } else {
      if (document.exitFullscreen) {
        document.exitFullscreen();
      }
      btn.style.display = "none";
    }
  }

  document.addEventListener("fullscreenchange", () => {
    const btn = document.getElementById("fullscreenBtn");
    if (!document.fullscreenElement) {
      btn.style.display = "none";
    }
  });
</script>
